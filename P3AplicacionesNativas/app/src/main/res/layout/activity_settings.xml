<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <TextView
        android:id="@+id/textSelection"
        android:text="@string/text_themeSelection"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="?attr/colorPrimary" />
    <RadioGroup
        android:id="@+id/themeSelector"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textSelection"
        app:layout_constraintEnd_toEndOf="parent">

        <RadioButton
            android:id="@+id/guindaTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_guindaTheme"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <RadioButton
            android:id="@+id/azulTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_escomTheme"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </RadioGroup>
    
    <Button
        android:id="@+id/saveThemeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_saveTheme"
        app:layout_constraintTop_toBottomOf="@+id/themeSelector"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="?attr/colorPrimary"
        android:textColor="?attr/colorOnPrimary"/>

</androidx.constraintlayout.widget.ConstraintLayout>